{% extends 'base.html.twig' %}

{% block body %}

	{% for formation in formations %}
		<section class="m-5">
			<a href="{{path('app_formation', {id: formation.id})}}" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 max-md:w-96 ">
				<img class="object-cover w-96 h-48 md:w-96 md:h-72 rounded-t-lg md:rounded-none md:rounded-s-lg" src="{{asset(formation.image1)}}" alt="">
				<div class="flex flex-col justify-between p-4 leading-normal">
					<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{formation.name}}</h5>
					<p class="mb-3 font-normal text-gray-700 max-md:text-wrap dark:text-gray-400">{{formation.texte1}}</p>
				</div>
			</a>
		</section>

	{% endfor %}

{% endblock %}
