{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<section class="py-40 bg-cover bg-center flex justify-center items-center" style="background-image:url('{{asset(pole.image1)}}')">
		<div class="border bg-[#ffffff80] p-10 ">
			<h1 class="text-xl font-bold inline-block">{{pole.name}}</h1>
		</div>
	</section>


	<section class="flex flex-col lg:flex-row m-10 gap-10 items-center border-2  rounded-lg bg-[#05282508]">
		<article class="w-[90%]">
			<img src="{{asset(pole.image2)}}" class="w-96 lg:h-72 lg:rounded-l-lg">
		</article>
		<article>
			<p>{{pole.texte1}}</p>
		</article>
	</section>

	<section class="flex flex-col lg:flex-row m-10 mt-15 gap-10 items-center border-2 rounded-lg bg-[#05282508]">
		<article>
			<p class="ml-5">{{pole.texte2}}</p>
		</article>
		<article class="w-[40%]">
			<img src="{{asset(pole.image3)}}" class="w-96 lg:h-72 lg:rounded-r-lg">
		</article>
	</section>

	<section class="flex flex-col lg:flex-row m-10 gap-10 items-center shadow-lg p-5 bg-[#05282508]">
		<article class="w-[50%]">
			<img src="{{asset('images/soudeur.jpg')}}" class="w-96 lg:h-72">
		</article>
		<article>
			<p>{{pole.description}}</p>
		</article>
	</section>

	<section class="flex flex-col justify-center items-center mb-10 gap-3">
		<h2 class="font-semibold text-xl">
			Teste tes conaissances!
		</h2>
		<button type="button" class="border bg-[#dcd873] p-5 px-10 text-red-700 rounded-lg">QUIZZ!</button>
	</section>

	<h2 class="flex justify-center text-center capitalize text-xl font-bold mt-16">Découvrez nos formations liées ce pôle : </h2>

	<section class="m-10 flex flex-wrap justify-center gap-14">
		
		{% for formation in formations %}
		
					<div class="w-96 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
						<a href="{{path('app_formation', {id: formation.id})}}">
							<img class="rounded-t-lg w-96 h-72" src="{{asset(formation.image1)}}" alt=""/>
						</a>
						<div class="p-5">
							<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{formation.name}}</h5>
							<p class="mb-3 font-normal text-gray-700 dark:text-gray-400 truncate">{{formation.texte1}}</p>
							<a href="{{path('app_formation', {id: formation.id})}}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-[#dcd873] rounded-lg hover:bg-[#0b9c9f] focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
								Read more
								<svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 10">
									<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
								</svg>
							</a>
						</div>
					</div>
		{% endfor %}

	</section>

	{% block endjs %}{% endblock %}
{% endblock %}
